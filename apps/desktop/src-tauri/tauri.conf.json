{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:8001",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "chronosphere",
		"version": "0.0.1"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"shell": {
				"all": false,
				"open": true
			},
			"notification": {
				"all": true
			},
			"window": {
				"all": false,
				"close": true,
				"hide": true,
				"show": true,
				"maximize": false,
				"minimize": false,
				"unmaximize": true,
				"unminimize": true,
				"startDragging": true
			},
			"path": {
				"all": true
			},
			"fs": {
				"all": true,
				"scope": [
					"$APP/*",
					"$DESKTOP/*",
					"$RESOURCE/*"
				]
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.chronosphere.desktop",
			"longDescription": "",
			"macOS": {
				"frameworks": [],
				"minimumSystemVersion": "10.15",
				"exceptionDomain": "",
				"signingIdentity": null,
				"entitlements": null
			},
			"resources": [
				"../assets/*"
			],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": false,
				"title": "",
				"width": 300,
				"height": 270,
				"transparent": true,
				"decorations": false,
				"hiddenTitle": true,
				"alwaysOnTop": false,
				"fileDropEnabled": false,
				"center": true,
				"titleBarStyle": "Overlay"
			}
		],
		"macOSPrivateApi": true,
		"systemTray": {
			"iconPath": "icons/icon.png",
			"iconAsTemplate": true
		}
	}
}